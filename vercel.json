{
    "version": 2,
    "builds": [
      {
        "src": "app/app.py",
        "use": "@vercel/python",
        "config": { 
          "maxLambdaSize": "15mb",
          "runtime": "python3.9"
        }
      },
      {
        "src": "app/static/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/app/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "app/app.py"
      }
    ]
  }